<% @page_title = "Owner List"%>

<div class="user list">
  <h2>Owners</h2>
  <%= link_to("Add new owner", {:action =>'new'},:class => 'action new')%>
  
  <table class="listing" summary="user list">
    <tr class="header">
      <th>First</th>
      <th>Last</th>
      <th>Email</th>
      <th>Squad name</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.email %></td>
      <td><%= user.password %></td>
      <td class="actions">
        <%= link_to("Show", {:action => 'show', :id => user.id}, :class => 'action show') %>
        <%= link_to("Edit", {:action => 'edit', :id => user.id}, :class => 'action edit') %>
        <%= link_to("Delete",{:action => 'delete', :id => user.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>