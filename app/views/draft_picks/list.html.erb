<% @page_title = "Picks List"%>

<div class="pick list">
  <h2>Picks</h2>
  <%= link_to("Add new pick", {:action =>'new'},:class => 'action new')%>
  
  <table class="listing" summary="pick list">
    <tr class="header">
      <th>Draft order</th>
      <th>User</th>
      <th>Team</th>
    </tr>
    <% @draft_picks.each do |draft_pick| %>
    <tr>
      <td><%= draft_pick.draft_order %></td>
      <td><%= draft_pick.user.first_name %></td>
      <td><%= draft_pick.team.name %></td>
      
      <td class="actions">
        <%= link_to("Show", {:action => 'show', :id => draft_pick.id}, :class => 'action show') %>
        <%= link_to("Edit", {:action => 'edit', :id => draft_pick.id}, :class => 'action edit') %>
        <%= link_to("Delete",{:action => 'delete', :id => draft_pick.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>